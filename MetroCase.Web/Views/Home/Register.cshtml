@using MetroCase.Entities
@model Kullanicilar
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/LoginStyle.css" rel="stylesheet" />

<script>
    @ViewBag.calljavascriptfunction

    function Popup() {
        BootstrapDialog.show({
            title: "Hoşgeldiniz",
            message: 'Lütfen hesabınızı aktivasyon mailinizdeki linkten aktive ediniz',
            buttons: [{
                label: 'Ok',
                action: function (dialog) {
                    dialog.close();
                }
            }]

        });
    }
</script>


<div class="container">
    <div class="wrapper">
        <form action="" method="post" name="Login_Form" class="form-signin">
            <h3 class="form-signin-heading">Welcome Back! Please Sign In</h3>
            <hr class="colorgraph"><br>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.TextBoxFor(Model => Model.Ad, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })

            @Html.TextBoxFor(Model => Model.Soyad, new { @class = "form-control", placeholder = "Surname" })
            @Html.ValidationMessageFor(model => model.Soyad, "", new { @class = "text-danger" })

            @Html.TextBoxFor(Model => Model.Username, new { @class = "form-control", placeholder = "Username" })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

            @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            @Html.TextBoxFor(Model => Model.Adres, new { @class = "form-control", placeholder = "Adres" })
            @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })

            @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

            @Html.TextBox("RePassword", "", htmlAttributes: new { @class = "form-control", placeholder = "RePassword", type = "password" })
            @Html.ValidationMessage("RePassword", new { @class = "text-danger" })

            <button class="btn btn-lg btn-primary btn-block" id="btnKaydet" name="btnKaydet" value="Login" type="Submit">Login</button>
        </form>
    </div>
</div>

